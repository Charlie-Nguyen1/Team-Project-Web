{
  "info": {
    "name": "Dental App API",
    "_postman_id": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
    "description": "Collection for backend endpoints: auth, patients, treatments, appointments, users",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register (Dentist)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"alice\",\"name\":\"Alice Dent\",\"email\":\"alice@test.com\",\"password\":\"Password1\",\"role\":\"dentist\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [ "{{baseUrl}}" ],
          "path": [ "api", "auth", "register" ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save created user id as dentistId",
              "try {",
              "  var json = pm.response.json();",
              "  if (json && json.user && json.user._id) {",
              "    pm.environment.set('dentistId', json.user._id);",
              "    console.log('dentistId saved:', json.user._id);",
              "  } else {",
              "    console.log('No user._id in register response');",
              "  }",
              "} catch (e) { console.log('Register response not JSON or other error', e); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\"usernameOrEmail\":\"alice\",\"password\":\"Password1\"}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save JWT token to environment variable 'token' (prefix with 'Bearer ' for Authorization header)",
              "try {",
              "  var json = pm.response.json();",
              "  if (json && json.token) {",
              "    pm.environment.set('token', 'Bearer ' + json.token);",
              "    console.log('Token saved to environment variable token');",
              "  } else {",
              "    console.log('No token in login response');",
              "  }",
              "} catch (e) { console.log('Login response not JSON or other error', e); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
